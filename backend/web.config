<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="iisnode" path="run.js" verb="*" modules="iisnode" resourceType="File" />
        </handlers>

        <rewrite>
            <rules>
                <!-- Archivos estáticos del frontend -->
                <rule name="StaticContent" stopProcessing="true">
                    <match url="^(.*\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json))$" />
                    <action type="Rewrite" url="dist/{R:1}" />
                </rule>

                <!-- Rutas API - dirigir a Node.js -->
                <rule name="DynamicContent" stopProcessing="true">
                    <match url="^api/.*" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
                    </conditions>
                    <action type="Rewrite" url="run.js" />
                </rule>

                <!-- SPA fallback - frontend para todo lo demás -->
                <rule name="SPA">
                    <match url=".*" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
                        <add input="{REQUEST_URI}" pattern="^/api" negate="True" />
                    </conditions>
                    <action type="Rewrite" url="dist/index.html" />
                </rule>
            </rules>
        </rewrite>

        <httpErrors existingResponse="PassThrough" />

        <iisnode 
            watchedFiles="run.js;iisnode.yml;build/**/*.js"
            loggingEnabled="true" 
            debuggingEnabled="false"
            node_env="production" />

        <defaultDocument>
            <files>
                <clear />
                <add value="run.js" />
            </files>
        </defaultDocument>

        <!-- Aumentar límites para payloads grandes -->
        <security>
            <requestFiltering>
                <requestLimits maxAllowedContentLength="52428800" />
            </requestFiltering>
        </security>

    </system.webServer>
</configuration>